---
import { css, cx } from '../../styled-system/css';
import { hstack, container } from '../../styled-system/patterns';
import MobileMenu from './MobileMenu.astro';
import Logo from './Logo.astro';
import { links, externalLinkAttrs } from '../config/links';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const headerClass = css({
  position: 'sticky',
  top: '0',
  zIndex: '50',
  background:
    'linear-gradient(135deg, rgba(8, 8, 8, 0.85) 0%, rgba(15, 15, 15, 0.9) 100%)',
  borderBottom: 'none',
  boxShadow: '0 8px 32px rgba(0, 0, 0, 0.3)',
  backdropFilter: 'blur(20px) saturate(180%)',
  transition: 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)',
  _before: {
    content: '""',
    position: 'absolute',
    bottom: '0',
    left: '0',
    right: '0',
    height: '1px',
    background:
      'linear-gradient(90deg, transparent 0%, rgba(0, 212, 255, 0.6) 30%, rgba(255, 107, 157, 0.4) 70%, transparent 100%)',
    opacity: '0.8',
    transition: 'all 0.3s ease',
  },
});

const navLinkClass = css({
  color: 'text-secondary',
  fontSize: 'md',
  fontWeight: '500',
  textDecoration: 'none',
  padding: '0.5rem 0.75rem',
  borderRadius: 'md',
  position: 'relative',
  transition: 'all 0.2s ease',
  _hover: {
    color: 'accent',
    backgroundColor: 'rgba(0, 212, 255, 0.1)',
    transform: 'translateY(-1px)',
    boxShadow: '0 4px 12px rgba(0, 212, 255, 0.2)',
  },
});

const activeNavLinkClass = css({
  color: 'accent',
  backgroundColor: 'rgba(0, 212, 255, 0.15)',
  boxShadow:
    '0 0 0 1px rgba(0, 212, 255, 0.3), 0 0 20px rgba(255, 107, 157, 0.1)',
});

const ctaButtonClass = css({
  backgroundColor: 'pgblue.500',
  color: 'white',
  padding: '0.5rem 1.25rem',
  borderRadius: 'md',
  fontSize: 'md',
  fontWeight: '600',
  textDecoration: 'none',
  transition: 'all 0.2s ease',
  _hover: {
    backgroundColor: 'pgblue.400',
    transform: 'translateY(-1px)',
    boxShadow: 'glow',
  },
});

const githubButtonClass = css({
  display: 'flex',
  alignItems: 'center',
  gap: 'sm',
  color: 'text-secondary',
  fontSize: 'md',
  textDecoration: 'none',
  padding: '0.375rem 0.75rem',
  borderRadius: 'md',
  border: '1px solid',
  borderColor: 'rgba(255, 255, 255, 0.1)',
  background: 'rgba(255, 255, 255, 0.05)',
  transition: 'all 0.2s ease',
  _hover: {
    color: 'text-primary',
    borderColor: 'rgba(0, 212, 255, 0.6)',
    backgroundColor: 'rgba(0, 212, 255, 0.1)',
    transform: 'translateY(-1px)',
    boxShadow: '0 4px 12px rgba(0, 212, 255, 0.3)',
  },
});

const logoClass = css({
  fontSize: '2xl',
  fontWeight: '700',
  fontFamily: 'heading',
  color: 'text-primary',
  textDecoration: 'none',
  display: 'flex',
  alignItems: 'center',
  gap: 'sm',
});
---

<header class={headerClass}>
  <div
    class={container({ maxW: '7xl', px: { base: 'lg', md: 'xl' }, py: 'lg' })}
  >
    <nav class={hstack({ justify: 'space-between', alignItems: 'center' })}>
      <!-- Logo -->
      <a href="/" class={logoClass}>
        <Logo size={32} />
      </a>

      <!-- Main Navigation -->
      <div
        class={hstack({
          gap: { base: 'lg', md: 'xl' },
          alignItems: 'center',
          display: { base: 'none', md: 'flex' },
        })}
      >
        <a
          href="/why-pgmt"
          class={cx(
            navLinkClass,
            currentPath === '/why-pgmt' ? activeNavLinkClass : ''
          )}
        >
          Why pgmt
        </a>
        <a
          href="/docs"
          class={cx(
            navLinkClass,
            currentPath === '/docs' ? activeNavLinkClass : ''
          )}
        >
          Docs
        </a>
        <a
          href={links.blog}
          class={cx(
            navLinkClass,
            currentPath.startsWith('/blog') ? activeNavLinkClass : ''
          )}
        >
          Blog
        </a>
      </div>

      <!-- Right Side Actions (Desktop) -->
      <div
        class={hstack({
          gap: 'md',
          alignItems: 'center',
          display: { base: 'none', md: 'flex' },
        })}
      >
        <a
          href={links.github.repo}
          {...externalLinkAttrs}
          class={githubButtonClass}
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            >
            </path>
          </svg>
          <span class={css({ display: { base: 'none', lg: 'inline' } })}>
            GitHub
          </span>
          <!--<span-->
          <!--  class={css({-->
          <!--    fontSize: 'sm',-->
          <!--    color: 'text-muted',-->
          <!--    fontWeight: 'normal',-->
          <!--  })}>2.3k</span-->
          <!--&gt;-->
        </a>
        <a href={links.docs.quickStart} class={ctaButtonClass}>Get Started</a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class={css({
          display: { base: 'block', md: 'none' },
          color: 'text-primary',
          backgroundColor: 'transparent',
          border: 'none',
          padding: 'sm',
          borderRadius: 'md',
          cursor: 'pointer',
          transition: 'all 0.2s ease',
          _hover: {
            color: 'accent',
            backgroundColor: 'rgba(0, 212, 255, 0.1)',
          },
        })}
        id="mobile-menu-toggle"
        aria-label="Open mobile menu"
      >
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </nav>
  </div>
</header>

<!-- Mobile Menu -->
<MobileMenu currentPath={currentPath} />

<script>
  // Enhanced scroll behavior for header
  const header = document.querySelector('header');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    const scrollProgress = Math.min(currentScroll / 200, 1); // Max effect at 200px

    if (currentScroll > 20) {
      header?.classList.add('scrolled');
      // Dynamic blur based on scroll distance
      const blurAmount = 10 + scrollProgress * 15; // 10px to 25px
      const opacity = 0.8 + scrollProgress * 0.15; // 0.8 to 0.95

      if (header) {
        header.style.backdropFilter = `blur(${blurAmount}px) saturate(180%)`;
        header.style.background = `linear-gradient(135deg, rgba(5, 5, 5, ${opacity + 0.1}) 0%, rgba(12, 12, 12, ${opacity + 0.15}) 100%)`;
        header.style.boxShadow = `0 8px 32px rgba(0, 0, 0, ${0.3 + scrollProgress * 0.2})`;
      }
    } else {
      header?.classList.remove('scrolled');
      // Reset to default
      if (header) {
        header.style.backdropFilter = 'blur(20px) saturate(180%)';
        header.style.background =
          'linear-gradient(135deg, rgba(8, 8, 8, 0.85) 0%, rgba(15, 15, 15, 0.9) 100%)';
        header.style.boxShadow = '0 8px 32px rgba(0, 0, 0, 0.3)';
      }
    }
  });

  // Mobile menu toggle is now handled by MobileMenu component
</script>

<style>
  header.scrolled::before {
    opacity: 0.8 !important;
  }

  /* Add subtle texture overlay */
  header::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(
        circle at 25% 25%,
        rgba(79, 195, 247, 0.03) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 75% 75%,
        rgba(51, 103, 145, 0.02) 0%,
        transparent 50%
      );
    pointer-events: none;
    z-index: -1;
  }
</style>
