---
import { css } from '../../styled-system/css';
import { container, grid, vstack, hstack } from '../../styled-system/patterns';
import { links, externalLinkAttrs } from '../config/links';

const footerClass = css({
  background:
    'linear-gradient(135deg, rgba(5, 5, 5, 0.95) 0%, rgba(8, 8, 8, 1) 100%)',
  borderTop: 'none',
  marginTop: 'auto',
  position: 'relative',
  _before: {
    content: '""',
    position: 'absolute',
    top: '0',
    left: '0',
    right: '0',
    height: '1px',
    background:
      'linear-gradient(90deg, transparent 0%, rgba(79, 195, 247, 0.3) 50%, transparent 100%)',
    opacity: '0.6',
  },
});

const footerTitleClass = css({
  fontSize: '2xl',
  fontWeight: '700',
  fontFamily: 'heading',
  color: 'text-primary',
  marginBottom: 'sm',
});

const footerSubtitleClass = css({
  fontSize: 'md',
  color: 'text-secondary',
  marginBottom: 'xl',
});

const footerSectionTitleClass = css({
  fontSize: 'sm',
  fontWeight: '600',
  color: 'text-primary',
  textTransform: 'uppercase',
  letterSpacing: '0.05em',
  marginBottom: 'md',
});

const footerLinkClass = css({
  color: 'text-secondary',
  fontSize: 'sm',
  textDecoration: 'none',
  padding: '0.25rem 0',
  borderRadius: 'sm',
  transition: 'all 0.2s ease',
  _hover: {
    color: 'accent',
    paddingLeft: '0.5rem',
  },
});

const bottomBarClass = css({
  borderTop: '1px solid',
  borderColor: 'rgba(255, 255, 255, 0.08)',
  paddingTop: 'lg',
  paddingBottom: 'lg',
  marginTop: 'xl',
  background: 'rgba(0, 0, 0, 0.2)',
});

const socialIconClass = css({
  color: 'text-secondary',
  padding: 'sm',
  borderRadius: 'md',
  transition: 'all 0.2s ease',
  _hover: {
    color: 'accent',
    backgroundColor: 'rgba(79, 195, 247, 0.1)',
    transform: 'translateY(-2px)',
  },
});
---

<footer class={footerClass}>
  <div
    class={container({ maxW: '7xl', px: { base: 'lg', md: 'xl' }, py: '3xl' })}
  >
    <!-- Main Footer Content -->
    <div class={css({ marginBottom: 'xl' })}>
      <h2 class={footerTitleClass}>pgmt</h2>
      <p class={footerSubtitleClass}>
        PostgreSQL Schema Development, Reimagined
      </p>
    </div>

    <!-- Footer Links Grid -->
    <div
      class={grid({
        columns: { base: 2, md: 3 },
        gap: { base: 'xl', md: '2xl' },
      })}
    >
      <!-- Product Column -->
      <div class={vstack({ alignItems: 'flex-start', gap: 'sm' })}>
        <h3 class={footerSectionTitleClass}>Product</h3>
        <a href={links.whyPgmt} class={footerLinkClass}>Why pgmt</a>
        <a href={links.docs.roadmap} class={footerLinkClass}>Roadmap</a>
        <a
          href={links.github.releases}
          {...externalLinkAttrs}
          class={footerLinkClass}
        >
          Releases
        </a>
      </div>

      <!-- Resources Column -->
      <div class={vstack({ alignItems: 'flex-start', gap: 'sm' })}>
        <h3 class={footerSectionTitleClass}>Resources</h3>
        <a href={links.docs.quickStart} class={footerLinkClass}>Quick Start</a>
        <a href={links.docs.root} class={footerLinkClass}>Documentation</a>
        <a href={links.docs.cli} class={footerLinkClass}>CLI Reference</a>
      </div>

      <!-- Community Column -->
      <div class={vstack({ alignItems: 'flex-start', gap: 'sm' })}>
        <h3 class={footerSectionTitleClass}>Community</h3>
        <a
          href={links.github.repo}
          {...externalLinkAttrs}
          class={footerLinkClass}
        >
          GitHub
        </a>
        <a
          href={links.github.discussions}
          {...externalLinkAttrs}
          class={footerLinkClass}
        >
          Discussions
        </a>
        <a href={links.docs.contributing} class={footerLinkClass}>
          Contributing
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class={bottomBarClass}>
      <div
        class={hstack({
          justify: 'space-between',
          alignItems: 'center',
          flexWrap: 'wrap',
          gap: 'lg',
        })}
